# Fitness Assistant MCP - Configurações

# Aplicação
DEBUG=true
LOG_LEVEL=INFO

# Banco de dados (usando porta 5432 para evitar conflito)
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql+asyncpg://fitness_user:fitness_dev_2024@localhost:5432/fitness_assistant

# Diretórios
DATA_DIR=data
BACKUP_DIR=data/backups
LOGS_DIR=logs

# Configurações de segurança
MAX_HR_WARNING=180
MIN_AGE=13
MAX_AGE=120

# Configurações de sessão
DEFAULT_SESSION_DURATION=30
MAX_SESSION_DURATION=180

# Analytics
ANALYTICS_RETENTION=365
PROGRESS_WEEKS=4

# Notificações
ENABLE_SAFETY_ALERTS=true
ENABLE_PROGRESS_NOTIFICATIONS=true

# MCP
MCP_SERVER_NAME=fitness-assistant
MCP_DESCRIPTION="Assistente inteligente para recomendações de exercícios"